{
  "name": "@versum/rn-calendar",
  "description": "React-Native Calendar",
  "version": "0.3.1",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.tsx",
  "types": "lib/typescript/src/index.d.ts",
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "bootstrap": "yarn example && yarn",
    "docs:build": "rm -rf .docz/ docs/ lib/ && yarn docz build",
    "docs:dev": "rm -rf .docz/ docs/ && yarn docz dev",
    "example": "yarn --cwd Example",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "release": "release-it --ci",
    "test": "jest --coverage --runInBand && yarn coverage",
    "coverage": "jest-coverage-badges ./coverage/coverage-summary.json --output ./badges",
    "test:watch": "jest --watch",
    "typescript": "tsc --noEmit"
  },
  "repository": "https://github.com/versum/rn-calendar",
  "author": "Damian Sznajder <damsznajder@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@commitlint/config-conventional": "9.1.2",
    "@expo/react-native-action-sheet": "3.8.0",
    "@react-native-community/bob": "0.16.2",
    "@release-it/conventional-changelog": "1.1.4",
    "@types/jest": "26.0.13",
    "@types/react": "16.9.49",
    "@types/react-native": "0.63.13",
    "babel-jest": "26.3.0",
    "commitlint": "9.1.2",
    "docz": "2.3.1",
    "eslint": "7.8.1",
    "eslint-config-satya164": "3.1.7",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "jest-coverage-badges": "1.1.2",
    "prettier": "2.1.1",
    "react": "16.13.0",
    "react-dom": "16.13.1",
    "react-native": "0.63.2",
    "react-native-testing-library": "2.1.0",
    "react-native-web": "0.13.9",
    "react-test-renderer": "16.13.1",
    "release-it": "13.7.1",
    "typescript": "3.9.7"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/Example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/.docz/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native)"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "typescript",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typescript",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
